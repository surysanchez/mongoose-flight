<%- include('../partials/header') %>

<section id="show-page">
    <div><strong>Airline:</strong></div>
    <div><%= flight.airline %></div>
    <div><strong>Airport:</strong></div>
    <div><%= flight.airport %></div>
    <div><strong>FlightNo</strong></div>
    <div><%= flight.flightNo %></div>
    <div><strong>Departs</strong></div>
    <div><%= flight.departs %></div>


<br><h2>Destinations</h2>
<form  id="destinations"  method="POST"  action="/flights/<%= flight._id %>/destinations">
<label>Airport:</label>
    <select name="airport">
        <option value="AUS">Austin(AUS)</option>
        <option value="SAN">San Diego(SAN)</option>
        <option value="DEN">Denver(DEN)</option>
        <option value="MIA">Miami(MIA)</option>
        <option value="LAX">Los Angeles(LAX)</option>
    </select>
<label>Arrival:</label>
    <input type="datetime-local" name="arrival" required>
<input id="add-destination" type="submit" value="Add Destination">
</form>

<% if (flight.destinations.length) { %>
    <table>
        <thead>
            <tr>
                <th>Airport</th>
                <th>Arrival</th>
            </tr>
        </thead>
        <tbody>
            <% flight.destinations.forEach(function(f) { %>
                <tr>
                    <td><%= f.airport %></td>
                    <td><%= f.arrival.toLocaleDateString() %></td>
                </tr>
           <% }); %>
        </tbody>
    </table>

<% } else { %>
    <h5>No destinations Yet</h5>

<% } %>


<div>
    <h2 id="details-h2">Tickets</h2>
    <table>
        <thead>
            <th>
                Seat
            </th>
            <th>
                Price
            </th>
        </thead>
        <% ticket.forEach(function(t) { %>
            <tr>
                <td><%= t.seat %></td>
                <td><%= t.price %></td>
            </td>
        </tr>
    <% }) %>  
  </table>
  <button type="submit" class="create-btn"><a href="/flights/<%= flight._id %>/tickets/new">Create a new ticket</a></button>
</div> 
</div> 


<%- include('../partials/footer') %>
